@model CheeseMVC.ViewModels.AddCheeseViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Cheese - @Model.Name</h1>

<form asp-controller="Cheese" asp-action="Edit" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" value="@Model.Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" value="@Model.Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="Model.Categories" value="@Model.CategoryID"></select>
    </div>

    <input type="hidden" asp-for="CheeseID" value="@Model.CheeseID"/>

    <input type="submit" value="Edit Cheese" />

</form>